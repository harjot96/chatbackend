# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRES_IN=7d

# PostgreSQL Database Configuration
